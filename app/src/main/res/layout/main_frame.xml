<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_back">

    <Button
        android:id="@+id/logout"
        android:layout_width="115dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#D9D9D9"
        app:cornerRadius="8dp"
        android:layout_marginBottom="20dp"
        android:text="Выйти"
        android:padding="0dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:text="Привет пользователь"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Введи код в поле для\nоплаты"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ProgressBar
        android:id="@+id/circular"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginTop="50dp"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/circle"
        android:progress="50"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textColor="#ffff"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/circular"
        app:layout_constraintEnd_toEndOf="@+id/circular"
        app:layout_constraintStart_toStartOf="@+id/circular"
        app:layout_constraintTop_toBottomOf="@+id/code" />

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="code"
        android:textColor="#ffff"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="@+id/circular"
        app:layout_constraintEnd_toEndOf="@+id/circular"
        app:layout_constraintStart_toStartOf="@+id/circular"
        app:layout_constraintTop_toTopOf="@+id/circular" />

    <Button
        android:id="@+id/btn_tokatlg"
        android:layout_width="188dp"
        android:layout_height="43dp"
        android:backgroundTint="#D9D9D9"
        app:cornerRadius="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circular"
        tools:ignore="MissingConstraints"
        android:text="Начать покупки"
        android:textSize="20sp"
        android:padding="0dp"
        android:textColor="#000000"/>

</androidx.constraintlayout.widget.ConstraintLayout>