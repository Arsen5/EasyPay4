<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_reg">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Давай зарегистрируемся!"
        android:textColor="#ffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email_reg"
        android:layout_width="228dp"
        android:layout_height="40dp"
        android:backgroundTint="#ffff"
        android:hint="Email"
        android:textColorHint="#ffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginTop="101dp"
        android:layout_marginLeft="65dp"
        android:textColor="#ffff"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="228dp"
        android:layout_height="40dp"
        android:backgroundTint="#ffff"
        android:hint="Имя"
        android:textColorHint="#ffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_reg"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="65dp"
        android:textColor="#ffff"/>

    <EditText
        android:id="@+id/pass_reg"
        android:layout_width="228dp"
        android:layout_height="40dp"
        android:backgroundTint="#ffff"
        android:hint="Пароль"
        android:textColorHint="#ffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="65dp"
        android:textColor="#ffff"/>

    <EditText
        android:id="@+id/pass_dbl"
        android:layout_width="228dp"
        android:layout_height="40dp"
        android:backgroundTint="#ffff"
        android:hint="Повтор пароля"
        android:textColorHint="#ffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_reg"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="65dp"
        android:textColor="#ffff"/>

    <Button
        android:id="@+id/reg"
        android:layout_width="181dp"
        android:layout_height="43dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pass_dbl"
        android:backgroundTint="#D9D9D9"
        android:layout_marginTop="52dp"
        app:cornerRadius="7dp"
        android:text="Зарегистрироваться"
        android:padding="0dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:text="Уже есть аккаунт?"
        android:textColor="#ffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        android:layout_marginRight="11dp"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="113dp"
        android:layout_height="34dp"
        android:layout_marginBottom="46dp"
        android:backgroundTint="#BFBFBF"
        android:padding="0dp"
        android:text="Войти"
        android:textColor="#000000"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="71dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>